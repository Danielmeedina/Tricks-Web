---
import MyCode from "@components/MyCode.astro";
import LayoutCSS from "@layouts/LayoutCSS.astro"
---

<LayoutCSS title="Efecto de texto ondulado">
  <h1>Efecto de texto ondulado</h1>

  <MyCode code={`
<div class="prueba">
  <h2>Welcome</h2>
  <h2>Welcome</h2>
</div>

<style>
  
body{
  display:grid;
  place-items:center;
}

.prueba {
position: relative;
}

.prueba h2 {
color: red;
font-size: 60px;
position: absolute;
transform: translate(-50%, -50%);
}

.prueba h2:nth-child(1) {
color: transparent;
-webkit-text-stroke: 2px #03a9f4;
}

.prueba h2:nth-child(2) {
color: #03a9f4;
animation: animate 4s ease-in-out infinite;
}

@keyframes animate {
  0%,
  100% {
    clip-path: polygon(
      0% 45%,
      16% 44%,
      33% 50%,
      54% 60%,
      70% 61%,
      84% 59%,
      100% 52%,
      100% 100%,
      0% 100%
    );
  }

  50% {
    clip-path: polygon(
      0% 60%,
      15% 65%,
      34% 66%,
      51% 62%,
      67% 50%,
      84% 45%,
      100% 46%,
      100% 100%,
      0% 100%
    );
  }
}

</style>      
  `} />

</LayoutCSS>